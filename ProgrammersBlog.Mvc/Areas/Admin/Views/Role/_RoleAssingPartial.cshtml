@model ProgrammersBlog.Entities.Dtos.UserRoleAssingDto
<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><span class="fas fa-user-shield"></span> @Model.UserName kullanıcına rol atanıyor...</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="İptal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Assing" id="form-role-assing">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display: none;"></div>
                    <input type="hidden" asp-for="UserId" />
                    <div class="form-row">
                        @for (int i = 0; i < Model.RoleAssingDtos.Count; i++)
                        {
                            switch (i)
                            {
                                case 0:
                                <div class="form-group col-md-12">
                                    <h4 class="text-center"><span class="fas fa-th-list"></span> Kategori izinleri</h4>
                                </div>
                                break;
                                case 4:
                                <div class="form-group col-md-12">
                                    <h4 class="text-center"><span class="fas fa-file-alt"></span> Makele izinleri</h4>
                                </div>
                                break;
                                case 8:
                                <div class="form-group col-md-12">
                                    <h4 class="text-center"><span class="fas fa-users"></span> Kullanıcı izinleri</h4>
                                </div>
                                break;
                                case 12:
                                <div class="form-group col-md-12">
                                    <h4 class="text-center"><span class="fas fa-user-shield"></span> Rol izinleri</h4>
                                </div>
                                break;
                                 case 16:
                                <div class="form-group col-md-12">
                                    <h4 class="text-center"><span class="fas fa-comments"></span> Yorum izinleri</h4>
                                </div>
                                break;
                                 case 20:
                                <div class="form-group col-md-12">
                                    <h4 class="text-center"><span class="fas fa-shield-alt"></span> Genel izinleri</h4>
                                </div>
                                break;
                        
                            }      
                            <div class="form-group col-md-3">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" asp-for="@Model.RoleAssingDtos[i].HasRole"/>
                                    <label asp-for="@Model.RoleAssingDtos[i].RoleId">@Model.RoleAssingDtos[i].RoleName</label>
                                    <input type="hidden" asp-for="@Model.RoleAssingDtos[i].RoleId" />
                                    <input type="hidden" asp-for="@Model.RoleAssingDtos[i].RoleName" />
                                </div>
                            </div>
                        }

                    </div>


                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-block" data-dismiss="modal"><span class="fas fa-times"></span> İptal</button>
                <button type="button" class="btn btn-primary btn-block" id="btnAssing"><span class="fas fa-save"></span> Kaydet</button>
            </div>
        </div>
    </div>
</div>
